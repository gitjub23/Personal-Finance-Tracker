<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.financeapp.controllers.BottomNavController"
      styleClass="bottom-nav"
      alignment="CENTER"
      spacing="30"
      prefHeight="70"
      prefWidth="420">

    <!-- Home -->
    <VBox alignment="CENTER" spacing="3" fx:id="homeButton" styleClass="nav-item">
        <ImageView fitHeight="22" preserveRatio="true">
            <Image url="@../icons/home.png"/>
        </ImageView>
        <Label text="Home" styleClass="nav-label"/>
    </VBox>

    <!-- Transactions -->
    <VBox alignment="CENTER" spacing="3" fx:id="transactionsButton" styleClass="nav-item">
        <ImageView fitHeight="22" preserveRatio="true">
            <Image url="@../icons/transactions.png"/>
        </ImageView>
        <Label text="Transactions" styleClass="nav-label"/>
    </VBox>

    <!-- Reports -->
    <VBox alignment="CENTER" spacing="3" fx:id="reportsButton" styleClass="nav-item">
        <ImageView fitHeight="22" preserveRatio="true">
            <Image url="@../icons/piechart.png"/>
        </ImageView>
        <Label text="Reports" styleClass="nav-label"/>
    </VBox>

    <!-- Settings -->
    <VBox alignment="CENTER" spacing="3" fx:id="settingsButton" styleClass="nav-item">
        <ImageView fitHeight="22" preserveRatio="true">
            <Image url="@../icons/settings.png"/>
        </ImageView>
        <Label text="Settings" styleClass="nav-label"/>
    </VBox>

</HBox>