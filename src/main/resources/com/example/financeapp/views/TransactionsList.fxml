<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.financeapp.controllers.TransactionsListController"
            prefWidth="420" prefHeight="760"
            styleClass="background-gradient">

    <!-- HEADER -->
    <top>
        <VBox spacing="4">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Transactions" styleClass="title"/>
            <Label text="Manage your finances" styleClass="subtitle"/>
        </VBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Visible Add button at top-right -->
            <HBox alignment="CENTER_RIGHT">
                <Button fx:id="addButton"
                        text="+ Add Transaction"
                        styleClass="add-transaction-btn"/>
            </HBox>

            <!-- Transactions list -->
            <ScrollPane fitToWidth="true" styleClass="no-scrollbar">
                <VBox fx:id="transactionsContainer"
                      spacing="12"
                      alignment="TOP_CENTER">
                    <padding>
                        <Insets top="20" right="0" bottom="10" left="0"/>
                    </padding>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>

    <!-- BOTTOM NAV -->
    <bottom>
        <fx:include source="BottomNav.fxml"/>
    </bottom>

</BorderPane>