<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.financeapp.controllers.SignUpController"
            prefWidth="420" prefHeight="680"
            styleClass="background-gradient">

    <VBox alignment="TOP_CENTER" spacing="20" maxWidth="360"
          AnchorPane.topAnchor="40"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <!-- App Icon -->
        <ImageView fitWidth="60" preserveRatio="true">
            <Image url="@../icons/app_icon.png"/>
        </ImageView>

        <Label text="FinanceTracker" styleClass="title"/>
        <Label text="Create your account" styleClass="subtitle"/>

        <!-- SignUp Card -->
        <VBox spacing="20" styleClass="auth-card" alignment="CENTER" maxWidth="360">

            <!-- Full Name -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-field">
                <ImageView fitHeight="20" preserveRatio="true">
                    <Image url="@../icons/user.png"/>
                </ImageView>
                <TextField fx:id="fullNameField"
                           promptText="Full name"
                           HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Email -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-field">
                <ImageView fitHeight="20" preserveRatio="true">
                    <Image url="@../icons/mail.png"/>
                </ImageView>
                <TextField fx:id="emailField"
                           promptText="you@example.com"
                           HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Password -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-field">
                <ImageView fitHeight="22" preserveRatio="true">
                    <Image url="@../icons/lock.png"/>
                </ImageView>
                <PasswordField fx:id="passwordField"
                               promptText="Password"
                               HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Confirm Password -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-field">
                <ImageView fitHeight="22" preserveRatio="true">
                    <Image url="@../icons/lock.png"/>
                </ImageView>
                <PasswordField fx:id="confirmPasswordField"
                               promptText="Confirm password"
                               HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Terms Checkbox -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <CheckBox fx:id="agreeTerms"/>
                <Label text="I agree to the Terms of Service and Privacy Policy"/>
            </HBox>

            <!-- Create Account Button -->
            <Button text="Create Account"
                    fx:id="createAccountBtn"
                    styleClass="primary-btn"
                    onAction="#handleCreateAccount"
                    maxWidth="Infinity"/>

            <!-- Go To Login -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Already have an account?"/>
                <Hyperlink text="Sign In" onAction="#goToLogin"/>
            </HBox>

            <!-- Divider -->
            <Label text="Or sign up with" styleClass="divider-label"/>

            <!-- Social Buttons -->
            <HBox alignment="CENTER" spacing="12" maxWidth="300">

                <!-- Google Button -->
                <Button styleClass="social-btn" prefWidth="140">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <ImageView fitHeight="18" preserveRatio="true">
                                <Image url="@../icons/google.png"/>
                            </ImageView>
                            <Label text="Google"/>
                        </HBox>
                    </graphic>
                </Button>

                <!-- Apple Button -->
                <Button styleClass="social-btn" prefWidth="140">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <ImageView fitHeight="20" preserveRatio="true">
                                <Image url="@../icons/apple.png"/>
                            </ImageView>
                            <Label text="Apple"/>
                        </HBox>
                    </graphic>
                </Button>

            </HBox>

        </VBox>

    </VBox>

</AnchorPane>